# =========================
# AI Control Plane (.env)
# =========================
# Copy this file to .env and fill values before running docker compose

# Required: OpenRouter API key used by middleware
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxx

# Required (recommended): admin key for /admin endpoints on middleware
ADMIN_API_KEY=change-me-to-a-strong-secret

# Optional metadata sent to OpenRouter for ranking/attribution
OPENROUTER_HTTP_REFERER=http://localhost:3000
OPENROUTER_X_TITLE=OpenWebUI-Local-POC

# Optional: logging mode for middleware (metadata|off)
LOG_MODE=metadata

# Optional DB/Redis URLs (compose currently sets internal defaults)
# Keep these if you want to override compose/k8s manifests consistently.
REDIS_URL=redis://redis:6379
DATABASE_URL=postgresql://admin:adminpassword@db:5432/ai_control
WEBUI_DATABASE_URL=postgresql://admin:adminpassword@db:5432/openwebui

# OpenWebUI upstream settings (normally set in compose/k8s)
OPENAI_API_BASE_URL=http://middleware:8080/v1
OPENAI_API_KEY=dummy_key
WEBUI_TELEMETRY=false
ENABLE_FORWARD_USER_INFO_HEADERS=true
